{{#with user}}
    <h1>Editando: {{name}}</h1>

    <form action="/users/edit" method="POST" class="form">
        <input type="hidden" name="id" value="{{id}}">
        <div class="form-controll">
            <label for="name">Nome: </label>
            <input type="text" name="name" placeholder="Digite o nome do Usuário" value="{{name}}"> 
        </div>
        <div class="form-controll">
            <label for="occupation">Ocupação: </label>
            <input type="text" name="occupation" placeholder="Digite a ocupação do Usuário" value="{{occupation}}"> 
        </div>
        <div class="form-controll form-checkbox">
            {{#if newsLetter}}
                <input type="checkbox" name="newsLetter" checked>
            {{else}}
                <input type="checkbox" name="newsLetter">
            {{/if}}
            <label for="newsLetter">Enviar Promoções? </label>
        </div>
        <input type="submit" value="Editar">
    </form>
    <div style="margin-bottom: 2em"></div>
    <div class="address-container">
        <div class="address-form-container">
            <h2>Adicionar Endereço: </h2>
            <form action="/address/create" method="POST">
                <input type="hidden" name="UserId" value="{{id}}">
                <div class="form-controll">
                    <label for="street">Rua: </label>
                    <input type="text" name="street" placeholder="Digite a rua"> 
                </div>
                <div class="form-controll">
                    <label for="number">Numero: </label>
                    <input type="text" name="number" placeholder="Digite o numero do local"> 
                </div>
                <div class="form-controll">
                    <label for="city">Cidade: </label>
                    <input type="text" name="city" placeholder="Digite a cidade"> 
                </div>
                <input type="submit" value="Adicionar Endereço">
            </form>
        </div>
        <div class="address-list">
            <h2>Lista de Endereços: </h2>
            {{#each Addresses}}
                <div>
                    #{{this.id}} - {{this.street}}, {{this.number}} - {{this.city}}
                    <form action="/address/delete" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="hidden" name="UserId" value="{{this.UserId}}">
                        <input type="submit" value="Excluir">
                    </form>
                </div>
               
            {{/each}}
        </div>
    </div>
{{/with}}